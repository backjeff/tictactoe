<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d0d0d"
    android:padding="@dimen/inner_frame_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/slot1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/slot2"
            app:layout_constraintBottom_toTopOf="@+id/slot4"/>

        <ImageView
            android:id="@+id/slot2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/slot1"
            app:layout_constraintTop_toTopOf="@id/slot1"
            app:layout_constraintEnd_toStartOf="@+id/slot3"
            app:layout_constraintBottom_toTopOf="@id/slot5"/>

        <ImageView
            android:id="@+id/slot3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/slot2"
            app:layout_constraintTop_toTopOf="@id/slot1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/slot6"/>

        <ImageView
            android:id="@+id/slot4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slot1"
            app:layout_constraintEnd_toStartOf="@+id/slot5"
            app:layout_constraintBottom_toTopOf="@+id/slot7"/>

        <ImageView
            android:id="@+id/slot5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/slot4"
            app:layout_constraintTop_toTopOf="@id/slot4"
            app:layout_constraintEnd_toStartOf="@+id/slot6"
            app:layout_constraintBottom_toTopOf="@id/slot8"/>

        <ImageView
            android:id="@+id/slot6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/slot5"
            app:layout_constraintTop_toTopOf="@id/slot4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/slot9"/>

        <ImageView
            android:id="@+id/slot7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slot4"
            app:layout_constraintEnd_toStartOf="@+id/slot8"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/slot8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/slot7"
            app:layout_constraintTop_toTopOf="@id/slot7"
            app:layout_constraintEnd_toStartOf="@+id/slot9"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/slot9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/slot8"
            app:layout_constraintTop_toTopOf="@id/slot7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.wear.widget.BoxInsetLayout>